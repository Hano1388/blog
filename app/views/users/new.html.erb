

<div class="form">

      <ul class="tab-group">
        <li class="tab <% unless @isLogin %> active <% end %>"><a href="/signup">Sign Up</a></li>
        <li class="tab <% if @isLogin %> active <% end %>"><a href="/login">Log In</a></li>
      </ul>

      <div class="tab-content">
        <div id="signup" class="<% unless @isLogin %> show <% else %> hide <% end %> ">
          <h2>Sign Up for Free</h2>

        <%= form_for (@user || User.new) do |f| %>
          <form action="/signup" method="post">

          <div class="top-row">
            <div class="field-wrap">
              <!-- <label>
                First Name<span class="req">*</span>
              </label> -->
              <%= f.text_field :first_name, placeholder: 'First Name', class: 'req' %>
            </div>

            <div class="field-wrap">
              <%= f.text_field :last_name, placeholder: 'Last Name' %>
            </div>
          </div>

          <div class="field-wrap">
            <%= f.email_field :email, placeholder: 'Email' %>
          </div>

          <div class="field-wrap">
              <%= f.password_field :password, placeholder: 'Password' %>
          </div>

          <div class="field-wrap">
              <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %>
          </div>

          <div class="action"><%= f.submit :'Get Started', class: "button button-block" %></div>

          </form>
        <% end %>
        </div>



        <div id="login" class="<% if @isLogin %> show <% else %> hide <% end %> ">
          <h2>Welcome Back!</h2>

          <%= form_tag sessions_path do %>

          <div class="field-wrap">
            <%= text_field_tag :email, params[:email], placeholder:'example@example.example' %>
          </div>

          <div class="field-wrap">
            <%= password_field_tag :password, params[:email], placeholder:'Password' %>
          </div>

          <!-- <p class="forgot"><a href="#">Forgot Password?</a></p> -->

          <!-- <button class="button button-block"/>Log In</button> -->
          <div class="action"><%= submit_tag "Log In", class: "button button-block" %></div>

           <% end %>
        </div>

      </div><!-- tab-content -->

</div> <!-- /form -->
