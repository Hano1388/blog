<!DOCTYPE html>
<html>
  <head>
    <title>BlogCrud</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <%#= javascript_include_tag 'application' %>

  </head>

  <body>
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" arial-controls ="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand fa fa-envelope fa-2x" href="#"></a>
          </div>

          <div class="collapse navbar-collapse" id="navbar">

            <ul class="nav navbar-nav navbar-right">
              <li><form class="navbar-search navbar-form navbar-left" action="index.html" method="post">
                <input type="text" class="form-control" placeholder="Search..." name="" value="">
              </form>
            </li>
            <% if current_user %>
              <li>Logged in as </li>
              <li> <%= current_user.first_name %></li>
              <li><%= link_to "Log Out", logout_path, method: 'delete'  %></li>
            <% else %>
            <li><%= link_to 'Sign up', signup_path %></li>
            <li><%= link_to 'Log In', login_path %></li>
            <% end %>
            </ul>

            <ul class="nav navbar-nav">
              <li><a class="nav-link" href="#">About</a></li>
              <li><a class="nav-link" href="#">Contact</a></li>
            </ul>

          </div>
        </div>
  </nav>

  <div style="margin-top: 50px;" class="img-responsive bgImage">
    <h1><%= link_to "Posts", posts_path %></h1>

    <% if flash[:notice] %>
      <div class='alert alert-success'><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div class='alert alert-danger'><%= flash[:alert] %></div>
    <% end %>
    <%= yield %>

    <div style="margin-top: 40px;"></div>

    <nav class="footer navbar navbar-fixed-bottom navbar-inverse bg-primary">
      <div class="container">
        <div class="" style="display: flex; flex-direction: row; justify-content: space-around;">
          <a class="fa fa-facebook fa-3x flinks" href="#"></a>
          <a class="fa fa-envelope fa-3x flinks" href="#"></a>
          <a class="fa fa-medium fa-3x flinks" href="#"></a>
          <a class="fa fa-twitter fa-3x flinks" href="#"></a>
          <a class="fa fa-instagram fa-3x flinks" href="#"></a>
        </div>
      </div>
    </nav>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
