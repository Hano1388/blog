<div class="container">

  <div class="row">

      <div class="col-sm-9 col-sm-offset-1 col-md-7 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <%= link_to 'Add a Post', new_post_path, class: "btn btn-primary btn-block" %>
      </div>

  </div>
  <br />

  <div class="row">

      <div class="col-sm-9 col-sm-offset-1 col-md-7 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <% @posts.each do |post| %>
            <h4>
              <%= link_to post.title, post_path(post) %>

              <a class="pull-right" role="button" data-toggle="collapse" data-parent="#accordion" href="posts/<%= post.id %>" aria-expanded="true" aria-controls="posts/<%= post.id %>">
                show
              </a>
            </h4>

            <div class="collapse" id="posts/<%= post.id %>">
              <br />
              <br />
              <p><string>Category:<br /> </string><%= post&.category&.name %></p>
              <p><string>Body:<br />  </string><%= post.body %></p>
            </div>
            <br />
            <hr />


        <% end %>
      </div>

  </div>

</div>
